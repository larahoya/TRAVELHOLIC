<div class='form-update'>
  <form class="update_user" id="update_user" action="/" accept-charset="UTF-8" method="pathc">
    <input name="utf8" type="hidden" value="&#x2713;" />
    <input type="hidden" id='authenticity_token' name="authenticity_token" />

    <label for="user_first_name">First Name</label>
    <input type="text" name="user[first_name]" value='{{first_name}}' id="user_first_name" /><br>

    <label for="user_last_name">Last Name</label>
    <input type="text" name="user[last_name]" value='{{last_name}}' id="user_last_name" /><br>

    <label for="user_address">Address</label>
    <input type="text" name="user[address]" value='{{address}}' id="address_name" /><br>

    <label for="user_city">City</label>
    <input type="text" name="user[city]" value='{{city}}' id="user_city" /><br>

    <label for="user_country">Country</label>
    <input type="text" name="user[country]" value='{{country}}' id="user_country" /><br>

    <label for="user_date_of_birth">Date of birth</label>
    <input type="date" name="user[date_of_birth]" value='{{date_of_birth}}' id="user_date_of_birth" /><br>

    <label for="user_telephone">Telephone</label>
    <input type="number" name="user[telephone]" value='{{telephone}}' id="user_telephone" /><br>

    <label for="user_email">Email</label>
    <input type="email" value="" name="user[email]" value='{{email}}' id="user_email" /><br>

    <label for="user_password">Password</label>
    <em>(8 characters minimum)</em>
    <input autocomplete="off" type="password" name="user[password]" id="user_password" /><br>

    <label for="user_password_confirmation">Password confirmation</label>
    <input autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation" /><br>

    <label for="current_password">Current password</label>
    <input autocomplete="off" type="password" name="user[current_password]" id="user_current_password" /><br>

    <input id='btn-user-update' type="submit" name="commit" value="Update" />

  </form>
</div>